# MongoDB Connection String
# Local: mongodb://localhost:27017/survey_db
# MongoDB Atlas: mongodb+srv://username:password@cluster.xxxxx.mongodb.net/survey_db?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/survey_db

# Server Port (default: 5000)
PORT=5000

# Environment (development, production)
NODE_ENV=development

# CORS Origin for frontend
# Local: * (allow all)
# Production: https://your-frontend-url.vercel.app
CORS_ORIGIN=*
